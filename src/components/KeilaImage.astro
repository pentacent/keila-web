---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/**/*.{jpeg,jpg,png,gif,webp}",
);
interface Props {
  src: string;
  alt: string;
  maxWidth?: number;
}

const { src, alt, maxWidth } = Astro.props;
if (!images[src]) {
  throw new Error(`Image ${src} not found!`);
}
---

<div class="lg:-mx-20 flex items-center justify-center">
  <Image
    src={images[src]()}
    alt={alt}
    widths={[640, 960, 1280]}
    class="shadow-md rounded overflow-hidden border-4 border-gray-300"
    style={maxWidth ? `max-width: ${maxWidth}px;` : ""}
  />
</div>
